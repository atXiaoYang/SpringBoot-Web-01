{
  "name": "Spring Boot 2 (Fixed JDK)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ],
      "settings": {
        "java.home": "/usr/lib/jvm/java-11-openjdk-amd64",
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-11",
            "path": "/usr/lib/jvm/java-11-openjdk-amd64"
          }
        ]
      }
    }
  },
  "postCreateCommand": "echo 'âœ… JDK 11 and Maven installed' && (test -f ./mvnw && chmod +x ./mvnw || true)",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "onAutoForward": "openPreview"
    }
  }
}
