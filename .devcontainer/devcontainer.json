{
  "name": "Spring Boot Dev",
  "image": "mcr.microsoft.com/devcontainers/java:17-bullseye",

  // 自动安装 Maven 和 Git（如果你用 Gradle，可换成 gradle feature）
  "features": {
    "ghcr.io/devcontainers/features/maven:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  // 自动安装 VS Code 插件
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",     // 包含 Spring Boot Tools
        "pivotal.vscode-spring-boot",   // 官方 Spring Boot 插件（可选但推荐）
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "java.configuration.updateBuildConfiguration": "interactive",
        "files.autoSave": "onFocusChange",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  // 启动后自动赋予脚本执行权限（重要！）
  "postCreateCommand": "chmod +x ./mvnw && echo '✅ Maven Wrapper ready'",

  // 自动转发 Spring Boot 默认端口
  "forwardPorts": [8080, 8081, 5005],

  // 端口提示优化
  "portsAttributes": {
    "8080": {
      "label": "Spring Boot App",
      "onAutoForward": "openPreview"
    },
    "5005": {
      "label": "Remote Debug"
    }
  }
}
