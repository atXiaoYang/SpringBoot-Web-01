{
  "name": "Spring Boot 2 with MySQL",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ],
      "settings": {
        "java.home": "/usr/lib/jvm/java-11-openjdk-amd64",
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-11",
            "path": "/usr/lib/jvm/java-11-openjdk-amd64"
          }
        ]
      }
    }
  },
  // ğŸ”¹ æ–°å¢ï¼šMySQL æœåŠ¡ï¼ˆç‹¬ç«‹å®¹å™¨ï¼‰
  "services": {
    "mysql": {
      "image": "mysql:8.0",
      "env": {
        "MYSQL_ROOT_PASSWORD": "root",
        "MYSQL_DATABASE": "mydb"
      },
      "ports": [3306],
      "options": ">- --health-cmd=\"mysqladmin ping -h localhost\" --health-interval=10s --health-timeout=5s --health-retries=3"
    }
  },
  // ğŸ”¹ è½¬å‘ 3306 ç«¯å£ï¼ˆç”¨äº Adminer æˆ–è¿œç¨‹è¿æ¥ï¼‰
  "forwardPorts": [8080, 3306],
  "portsAttributes": {
    "8080": {
      "onAutoForward": "openPreview"
    },
    "3306": {
      "onAutoForward": "silent"
    }
  },
  // ğŸ”¹ å¯é€‰ï¼šåˆ›å»ºåæç¤º
  "postCreateCommand": "echo 'âœ… JDK 11, Maven, and MySQL ready! DB: mysql:3306'"
}
